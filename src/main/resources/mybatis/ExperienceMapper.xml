<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sedia.resume.repository.ExperienceMapper">

    <resultMap id="ExperienceResultMap" type="com.sedia.resume.entity.ExperienceEntity">
    	<!-- //property指的是在Entity裡的屬性，而column就是在資料表的欄名 -->
    	
    	<!-- mybatis常用的型別
    	<result property="FLD_NUMBER" column="FLD_NUMBER" javaType="double" jdbcType="NUMERIC"/>
  		<result property="FLD_VARCHAR" column="FLD_VARCHAR" javaType="string" jdbcType="VARCHAR"/>
  		<result property="FLD_DATE" column="FLD_DATE" javaType="java.sql.Date" jdbcType="DATE"/>
  		<result property="FLD_INTEGER" column="FLD_INTEGER"  javaType="int" jdbcType="INTEGER"/>
  		<result property="FLD_DOUBLE" column="FLD_DOUBLE"  javaType="double" jdbcType="DOUBLE"/>
  		<result property="FLD_LONG" column="FLD_LONG"  javaType="long" jdbcType="INTEGER"/>
  		<result property="FLD_CHAR" column="FLD_CHAR"  javaType="string" jdbcType="CHAR"/>
  		<result property="FLD_BLOB" column="FLD_BLOB"  javaType="[B" jdbcType="BLOB" />
  		<result property="FLD_CLOB" column="FLD_CLOB"  javaType="string" jdbcType="CLOB"/>
  		<result property="FLD_FLOAT" column="FLD_FLOAT"  javaType="float" jdbcType="FLOAT"/>
  		<result property="FLD_TIMESTAMP" column="FLD_TIMESTAMP"  javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"/> -->
  		
  		
     	<result column="id" property="sn" jdbcType="INTEGER" />
        <result column="uid" property="uid" jdbcType="INTEGER" />
        <result column="company_name" property="companyName" jdbcType="CHAR" />
        <result column="position" property="position" jdbcType="CHAR" />
        <result column="start_date" property="startDate" jdbcType="TIMESTAMP" />
        <result column="end_date" property="endDate" jdbcType="TIMESTAMP" />
        <result column="experience_desc" property="experienceDescription" jdbcType="CHAR" />
        <result column="ability" property="ability" jdbcType="CHAR" />
        <result column="cr_user" property="crUser" jdbcType="CHAR" />
        <result column="crdate_time" property="crDatetime" jdbcType="TIMESTAMP" />
        <result column="up_user" property="upUser" jdbcType="CHAR" />
        <result column="update_time" property="upDatetime" jdbcType="TIMESTAMP" />

    </resultMap>
    
	<!-- 查詢使用者第一筆資料 -->
	<select id="firstExperience" resultMap="ExperienceResultMap">
        select * from experience where sn = #{sn};
    </select>
    
    <!-- 查詢所有資料 -->
    <select id="listExperience" resultMap="ExperienceResultMap">
        select * from experience
    </select>
    
    <!-- 新增資料 -->
    <select id="insertExperience" resultMap="ExperienceResultMap">
        insert into experience (uid,company_name,position,start_date,end_date,experience_description,ability,cr_datetime,up_datetime) values 
        (#{uid},#{company_name},#{position},#{start_date},#{end_date},#{experience_description},#{ability},#{cr_datetime},#{up_datetime});
    </select>
    
    <!-- 更新資料 -->
	<!-- 0428SN跟UID的判定結構要在哪邊回傳 -->
    <select id="updateExperience" resultMap="ExperienceResultMap">
        update experience set (sn,user_id,company_name,position,start_date,end_date,experience_description,abilite,up_datetime) values 
        (#{sn},#{uid},#{company_name},#{position},#{start_date},#{end_date},#{experience_description},#{ability},#{cr_datetime},#{up_datetime});
    </select>
    
	<!-- 刪除資料 -->
    <select id="deleteExperience" resultMap="ExperienceResultMap">
        delete from experience where sn = #{sn};
    </select>
    
    <!-- 確認資料是否存在 -->
    <!-- 0428如何讓mysql回傳boolean -->
    <select id="isExistExperience" resultMap="ExperienceResultMap">
        select * from experience where sn = #{sn};
    </select>
    
</mapper>